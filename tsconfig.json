{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "checkJs": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": true,
    "lib": ["es2022"],
    "module": "ESNext",
    "moduleResolution": "Node16",
    "noImplicitAny": true,
    "outDir": "./lib",
    "pretty": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "typeRoots": ["./node_modules/@types"],
  },
  "include": ["./src/**/*.ts"]
}
